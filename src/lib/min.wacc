# Function to find the minimum positive value in an array of ints
# Returns the largest integer value (2147483647) if array is empty

begin
  int min(int[] arr) is
    int length = len arr ;
    int min = 2147483647 ;
    int i = 0 ;
    while i < length do
      if arr[i] < min
      then
        min = arr[i]
      else
        skip
      fi ;
      i = i + 1
    done ;
    return min
  end
  skip
end
